<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_kuring_house"
    android:paddingStart="20dp"
    android:paddingTop="30dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/dialog_main_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_regular"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="네트워크에 문제가 발생하였습니다."
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dialog_sub_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/notosanskr_regular"
        android:gravity="center_horizontal"
        android:textColor="@color/kus_gray"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_main_txt"
        tools:text="네트워크 연결을 확인해주세요"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_dismiss_bt"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_green_radius32"
        android:fontFamily="@font/notosanskr_medium"
        android:text="@string/dialog_confirm"
        android:textColor="@color/kus_primary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_sub_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>